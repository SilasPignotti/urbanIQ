# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Config files
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Documentation
*.md text eol=lf
*.rst text eol=lf
*.txt text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Docker files
Dockerfile* text eol=lf
*.dockerfile text eol=lf

# Binary files
*.db binary
*.sqlite binary
*.sqlite3 binary
*.pkl binary
*.pickle binary

# Image files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary

# Archive files
*.zip binary
*.tar binary
*.gz binary

# Geodata files
*.shp binary
*.shx binary
*.dbf binary
*.prj text eol=lf