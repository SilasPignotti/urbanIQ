# Database Configuration
DATABASE_URL=sqlite:///./data/urbaniq.db

# OpenAI API Key (REQUIRED for NLP and Metadata services)
# Get your API key from: https://platform.openai.com/api-keys
# Should start with 'sk-' and be ~51 characters
OPENAI_API_KEY=sk-your-openai-api-key-here

# Logging Configuration
LOG_LEVEL=INFO

# File Storage Paths
TEMP_DIR=./data/temp
EXPORT_DIR=./data/exports
CACHE_DIR=./data/cache

# Development Settings
DEBUG=true
RELOAD=true

# CORS Origins (if needed)
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Production Database (for production deployment)
# DATABASE_URL=postgresql://user:password@localhost/urbaniq