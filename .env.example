# Database Configuration
DATABASE_URL=sqlite:///./geodaten_assistent.db

# Google Gemini API Key (REQUIRED for NLP and Metadata services)
# Get your API key from: https://makersuite.google.com/app/apikey
# Minimum 20 characters required for validation
GOOGLE_API_KEY=your-gemini-api-key-here

# Logging Configuration
LOG_LEVEL=INFO

# File Storage Paths
TEMP_DIR=./data/temp
EXPORT_DIR=./data/exports
CACHE_DIR=./data/cache

# Production Settings (optional for development)
SECRET_KEY=your-secret-key-for-sessions
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]
MAX_EXPORT_SIZE_MB=100
CLEANUP_INTERVAL_HOURS=24

# Performance Settings
WORKER_CONNECTIONS=1000
WORKER_TIMEOUT=120

# External API Timeouts (seconds)
WFS_TIMEOUT=30
OSM_TIMEOUT=45

# Development Settings
DEBUG=true
RELOAD=true

# Production Database (for production deployment)
# DATABASE_URL=postgresql://user:password@localhost/urbaniq
# POSTGRES_PASSWORD=your-postgres-password